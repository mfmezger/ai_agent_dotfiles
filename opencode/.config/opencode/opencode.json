{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "rules/karpathy-guidelines.md",
    "rules/permissions.md"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  },
  "permission": {
    "*": "ask",
    "bash": {
      "*": "ask",
      "uv sync": "allow",
      "uv run pytest *": "allow",
      "uv run pytest": "allow",
      "go mod tidy": "allow",
      "go mod download": "allow",
      "go test *": "allow",
      "go test": "allow",
      "go test -v -race -cover *": "allow",
      "go test -v -run Test*": "allow",
      "go test -coverprofile *": "allow",
      "go test -cover *": "allow",
      "go build": "allow",
      "go tool cover *": "allow",
      "make build": "allow",
      "make test": "allow",
      "make test-coverage": "allow",
      "make coverage-check": "allow",
      "make fmt": "allow",
      "make lint": "allow",
      "make tidy": "allow",
      "make all": "allow",
      "make swagger": "allow",
      "make clean": "allow",
      "git status": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "git add *": "allow",
      "git add .": "allow",
      "git commit -m *": "ask",
      "git commit --amend": "ask",
      "git push": "ask",
      "git checkout": "allow",
      "git branch": "allow",
      "ls": "allow",
      "ls -la": "allow",
      "find *": "allow",
      "grep *": "allow",
      "grep -r": "allow",
      "head": "allow",
      "tail": "allow",
      "cat": "allow",
      "wc": "allow",
      "wc -l": "allow",
      "rg": "allow",
      "todoread": "allow",
      "todowrite": "allow",
      "swag init": "allow",
      "docker compose *": "allow",
      "docker build": "allow",
      "docker run": "allow"
    },
    "edit": "ask",
    "read": "allow",
    "glob": "allow",
    "websearch": "allow",
    "webfetch": "allow",
    "codesearch": "allow"
  }
}
